
{{#partial "title"}}

    <h1> Record Your Sightings </h1>
{{/partial}}

{{#partial "content"}}

    <div class="home">
        <div class="container px-4">
            <div class="row gx-5">
                <div class="col-md-6">
                    <div class="p-3">
                        <figure class="figure">
                            <img src="/images/supa.jpg" class="figure-img img-fluid rounded"  alt="...">
                            <figcaption class="figure-caption"></figcaption>
                        </figure>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-3 border bg-light">
                        <h2 class="text-center">Create a new Hero</h2>
                        <form action='/sightings' method="post">
                            <div class="form-group" class="sightings">
                                <label for="name">Ranger Name</label>
                                <input id="name" name="name" class="form-control" type="text">
                            </div>
                            <div class="form-group">
                                <label for="age"> Animal Age</label>
                                <input id="age" name="age" class="form-control" type="text">
                            </div>
                            <div class="form-group">
                                <label for="location">Location</label>
                                <input id="location" name="location" class="form-control" type="text">
                            </div>
                            <div class="form-group">
                                <label for="health">Animal Health</label>
                                <input id="health" name="health" class="form-control" type="text">
                            </div>
                            <div>
                                <button type="submit" class="btn btn-transparent text-white">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}

{{>layout.hbs}}